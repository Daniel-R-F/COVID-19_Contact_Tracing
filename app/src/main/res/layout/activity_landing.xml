<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <Button
        android:id="@+id/settings"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginTop="116dp"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/account"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <Button
        android:id="@+id/status_update"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Status Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account" />

    <Button
        android:id="@+id/logout"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_update" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:text="Last Location  "
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/test_location"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/test_location"
        android:layout_width="215dp"
        android:layout_height="233dp"
        android:layout_marginEnd="24dp"
        android:text="None"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout" />

    <Button
        android:id="@+id/data_btn"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:text="Data"
        app:layout_constraintBottom_toTopOf="@+id/msg_tv"
        app:layout_constraintEnd_toStartOf="@+id/test_location"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="157dp"
        android:layout_height="77dp"
        android:text="No Nearby Mssg :("
        app:layout_constraintBottom_toTopOf="@+id/data_tv"
        app:layout_constraintEnd_toStartOf="@+id/test_location"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_btn" />


    <TextView
        android:id="@+id/data_tv"
        android:layout_width="152dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/test_location"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>